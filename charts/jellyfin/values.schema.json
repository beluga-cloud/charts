{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "oneOf": [
    {
      "$ref": "https://raw.githubusercontent.com/belug-apps/catalog/main/tools/jsonschema/helm-values/_definitions.json#/$defs/io.belugapps.v1.HelmValues"
    }
  ],
  "properties": {
    "jellyfin": {
      "description": "Configure specific properties to deploy Jellyfin.",
      "properties": {
        "extraDevices": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "mediaVolumes": {
          "description": "List of extra devices to mount in the Jellyfin container.",
          "items": {
            "properties": {
              "name": {
                "description": "Volume and directory name.",
                "type": "string"
              },
              "readOnly": {
                "description": "Whether the volume is read-only.",
                "type": "boolean"
              },
              "volumeSpec": {
                "$ref": "https://raw.githubusercontent.com/belug-apps/catalog/main/tools/jsonschema/kubernetes/v1.26.1/_definitions.json#/$defs/io.k8s.api.core.v1.PersistentVolumeSpec"
              }
            },
            "required": [
              "name",
              "volumeSpec"
            ],
            "type": "object"
          },
          "type": "array"
        }
      },
      "type": "object"
    }
  },
  "type": "object"
}
