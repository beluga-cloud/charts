{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>belug-apps/renovate-config:default",
    "github>belug-apps/renovate-config:gitmoji",
    "github>belug-apps/renovate-config:github-actions(nonOfficeHours)",
    "github>belug-apps/renovate-config:group-by-chart(actual)",
    "github>belug-apps/renovate-config:group-by-chart(cert-manager-issuers)",
    "github>belug-apps/renovate-config:group-by-chart(helm-dashboard)",
    "github>belug-apps/renovate-config:group-by-image(helm-dashboard, dashboard)",
    "github>belug-apps/renovate-config:group-by-chart(jellyfin)"
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "versioning": "semver"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["(^|/)Chart\\.yaml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)(?: versioning=(?<versioning>[a-z-0-9]+?))?\\s+appVersion: (?<currentValue>[^\\s]+?)\\s"

      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ]
}
